<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/audio_item_text_no"
        style="@style/AudioItemTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/audio_item_guideline_v0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="[No]"
        />
    <TextView
        android:id="@+id/audio_item_text_title"
        style="@style/AudioItemTextStyle"
        app:layout_constraintStart_toStartOf="@id/audio_item_guideline_v0"
        app:layout_constraintEnd_toEndOf="@id/audio_item_guideline_v3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="[Title]"
        />

    <TextView
        android:id="@+id/audio_item_text_album"
        style="@style/AudioItemTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/audio_item_guideline_v2"
        app:layout_constraintStart_toStartOf="@id/audio_item_guideline_v1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="[Album]"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/audio_item_text_artist"
        style="@style/AudioItemTextStyle"
        app:layout_constraintStart_toStartOf="@id/audio_item_guideline_v2"
        app:layout_constraintEnd_toEndOf="@id/audio_item_guideline_v3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="[Artist]"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/audio_item_text_duration"
        style="@style/AudioItemTextStyle"
        app:layout_constraintStart_toStartOf="@id/audio_item_guideline_v3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="00:00.00"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/audio_item_guideline_v0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/audio_item_guideline_v1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/audio_item_guideline_v2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/audio_item_guideline_v3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>