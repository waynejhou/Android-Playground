<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_top_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/SteelBlue"/>
    <FrameLayout
        android:id="@+id/main_middle_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/IndianRed">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Middle"
            android:textSize="32sp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/main_bottom_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/PaleGreen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bottom"
            android:textSize="32sp"/>
    </FrameLayout>
    <View
        android:id="@+id/main_focus_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/focus_view_border"/>
</FrameLayout>