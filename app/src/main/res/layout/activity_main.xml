<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">

    <FrameLayout
        android:id="@+id/main_view_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_top_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/Black" />

        <FrameLayout
            android:id="@+id/main_middle_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/Black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Middle"
                android:textSize="32sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_bottom_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/Black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bottom"
                android:textSize="32sp" />
        </FrameLayout>

        <View
            android:id="@+id/main_focus_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/focus_view_border" />

    </FrameLayout>

    <View
        android:id="@+id/main_touch_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>